<configuration debug="false" scan="false">
        <!--
                This is a stripped-down version of logback-include-appender-json.xml
                focusing on testing our dedicated stuff.
                Whenever that stuff is updated, make sure you copy it over to this place.
          Uses a standard synchronous appender to make debugging easier.
         -->
        <appender name="STDOUT-JSON" class="ch.qos.logback.core.ConsoleAppender">
                <encoder class="com.sap.hcp.cf.logback.encoder.JsonEncoder"/>
        </appender>
        <root level="${LOG_ROOT_LEVEL:-WARN}">
                <appender-ref ref="STDOUT-JSON" />
        </root>

        <logger name="com.sap.hcp.cf" level="INFO" />

</configuration>      